{
  "info": {
    "name": "Wellness Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        },
        {
          "name": "Logout All Devices",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout-all",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout-all"]
            }
          }
        }
      ]
    },
    {
      "name": "Medications",
      "item": [
        {
          "name": "Add One-Time Medication",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/medications",
              "host": ["{{base_url}}"],
              "path": ["api", "medications"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"medicineName\": \"Test Medicine\",\n    \"description\": \"Test Description\",\n    \"type\": \"one-time\",\n    \"dateTime\": \"2024-03-20T14:00:00Z\"\n}"
            }
          }
        },
        {
          "name": "Add Recurring Medication",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/medications",
              "host": ["{{base_url}}"],
              "path": ["api", "medications"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"medicineName\": \"Recurring Medicine\",\n    \"description\": \"Recurring Description\",\n    \"type\": \"recurring\",\n    \"startDate\": \"2024-03-20T00:00:00Z\",\n    \"endDate\": \"2024-04-20T00:00:00Z\",\n    \"recurringType\": \"daily\",\n    \"dayOfWeek\": \"monday\"\n}"
            }
          }
        },
        {
          "name": "Get User Medications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/medications",
              "host": ["{{base_url}}"],
              "path": ["api", "medications"]
            }
          }
        },
        {
          "name": "Mark Medication as Done",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/medications/{{medication_id}}/done",
              "host": ["{{base_url}}"],
              "path": ["api", "medications", "{{medication_id}}", "done"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "auth_token",
      "value": "your_auth_token_here"
    },
    {
      "key": "medication_id",
      "value": "your_medication_id_here"
    }
  ]
} 